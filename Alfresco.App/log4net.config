<?xml version="1.0" encoding="utf-8" ?>
<log4net xmlns="urn:log4net">
  <!-- RollingFile appender -->
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <!-- folder/fajl gde se loguje -->
    <file value="logs/worker.log" />
    <appendToFile value="true" />

    <!-- dnevni fajlovi: worker-2025-09-19.log -->
    <rollingStyle value="Date" />
    <datePattern value="yyyy-MM-dd&quot;.log&quot;" />
    <staticLogFileName value="false" />

    <!-- zadrži poslednjih 30 fajlova -->
    <maxSizeRollBackups value="30" />

    <!-- format loga -->
    <layout type="log4net.Layout.PatternLayout">
      <!-- Primer: [2025-09-19 16:20:33] [INFO ] (WorkerId=W-1234) Migration.Worker - Worker started -->
      <conversionPattern value="[%date{yyyy-MM-dd HH:mm:ss}] [%-5level] (WorkerId=%property{WorkerId}) %logger - %message%newline%exception" />
    </layout>
  </appender>

  <!-- Console appender (opciono za dev) -->
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date{HH:mm:ss}] [%-5level] (WorkerId=%property{WorkerId}) %logger - %message%newline" />
    </layout>
  </appender>

  <!-- Root logger -->
  <root>
    <level value="INFO" />
    <appender-ref ref="ConsoleAppender" />
    <appender-ref ref="RollingFileAppender" />
  </root>
</log4net>
