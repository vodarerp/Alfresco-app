<UserControl x:Class="Alfresco.App.UserControls.UsageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alfresco.App.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    
    <Grid>        
        <Border Style="{StaticResource HeaderPanel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"  Style="{StaticResource MetricColumn}">
                    <TextBlock Text="CPU Usage" Style="{StaticResource MetricLabelText}"/>
                    <TextBlock Text="{Binding CpuUsage}" Style="{StaticResource MetricValueText}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" Style="{StaticResource MetricColumn}">
                    <TextBlock Text="Memory Usage"  Style="{StaticResource MetricLabelText}"/>
                    <TextBlock Text="{Binding MemoryUsage}" Style="{StaticResource MetricValueText}"/>
                </StackPanel>
            </Grid>
        </Border>
        <!--<TextBlock Text="asdasd"/>

        <Button Content="clikc"></Button>-->
    </Grid>
</UserControl>
