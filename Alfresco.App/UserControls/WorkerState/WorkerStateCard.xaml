<UserControl x:Class="Alfresco.App.UserControls.WorkerState.WorkerStateCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alfresco.App.UserControls.WorkerState"
             mc:Ignorable="d"
             x:Name="root" Foreground="{StaticResource Clr.TextPrimary}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="rootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Worker.DisplayName, ElementName=root}"/>
        <Grid Grid.Row="1" x:Name="gridButtons">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!--<Button Grid.Column = "0" x:Name="btnStart" Content="Start" Width="100" Height="25" Click="btnStart_Click"/>
            <Button Grid.Column = "1" x:Name="btnStop" Content="Stop" Width="150" Click="btnStop_Click"/>-->        
            <ToggleButton Grid.Column="0" HorizontalAlignment="Left" x:Name="tglBtn" Width="40" Height="20" IsChecked="{Binding Worker.IsEnabled, ElementName=root}" Click="tglBtn_Click">
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                        <Ellipse x:Name="Knob" Width="21" Height="14" 
                                         Fill="White" 
                                         Margin="2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Knob" Property="Margin" Value="17,0,0,0"/>
                                            <Setter Property="Background" Value="Green"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="False">
                                            <Setter TargetName="Knob" Property="Margin" Value="-15,0,0,0"/>
                                            <Setter Property="Background" Value="Gray"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
            <TextBlock Grid.Column="1" Text="{Binding Worker.State, ElementName=root}" Padding="10"/>
        </Grid>

    </Grid>
</UserControl>
