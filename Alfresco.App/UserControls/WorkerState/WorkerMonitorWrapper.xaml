<UserControl x:Class="Alfresco.App.UserControls.WorkerState.WorkerMonitorWrapper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Alfresco.App.UserControls.WorkerState"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Grid Background="#F5F5F5">
        <!--<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="10">
                <TextBlock Text="Worker Monitoring Dashboard"
                          FontSize="24" FontWeight="Bold" Margin="10,10,10,20"
                          Foreground="#333333"/>

                <ItemsControl ItemsSource="{Binding Workers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:WorkerMonitorCard Worker="{Binding}" Margin="5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>-->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="True"
                      Padding="10">

            <DockPanel LastChildFill="True">
                <!-- Naslov gore -->
                <TextBlock DockPanel.Dock="Top"
                           Text="Worker Monitoring Dashboard"
                           FontSize="24" FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="#333333"/>

              
                <ItemsControl ItemsSource="{Binding Workers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Fiksiraj ili ogranii sirinu kartice po elji -->
                            <local:WorkerMonitorCard Worker="{Binding}"
                                                     Width="400"
                                                     Margin="18"/>
                            <!--
                            Alternativa ako elis fleks: umesto fiksne sirine koristi MinWidth/MaxWidth
                            MinWidth="380" MaxWidth="560"
                            -->
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
