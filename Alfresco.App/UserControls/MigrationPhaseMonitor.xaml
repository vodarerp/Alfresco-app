<UserControl x:Class="Alfresco.App.UserControls.MigrationPhaseMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Migration Pipeline Progress"
                           Foreground="White" FontSize="16" FontWeight="Bold"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnStart" Content="â–¶ Start Migration"
                            Click="btnStart_Click"
                            Margin="0,0,10,0" Padding="10,5"
                            Background="#27AE60" Foreground="White"
                            BorderThickness="0"/>
                    <Button x:Name="btnStop" Content="â¸ Stop"
                            Click="btnStop_Click"
                            Padding="10,5" Margin="0,0,10,0"
                            Background="#E74C3C" Foreground="White"
                            BorderThickness="0"/>
                    <Button x:Name="btnReset" Content="ðŸ”„ Reset"
                            Click="btnReset_Click"
                            Padding="10,5"
                            Background="#95A5A6" Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Overall Status -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <!-- Document Type Search Input (MigrationByDocument mode only) -->
                <Border Background="#3498DB" Padding="10" Margin="0,0,0,10"
                        Visibility="{Binding IsMigrationByDocument, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Document Type Search (ecm:docType)"
                                   Foreground="White" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Doc Types:"
                                       Foreground="White" FontSize="11" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding DocTypes, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="11" Padding="5"
                                     ToolTip="Enter document types separated by comma (e.g., 00756, 00824, 00125)"/>
                        </Grid>
                        <TextBlock Text="Enter document types separated by comma (e.g., 00756, 00824)"
                                   Foreground="#ECF0F1" FontSize="10" FontStyle="Italic" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="{Binding StatusMessage}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="73*"/>
                        <ColumnDefinition Width="687*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ProgressBar Grid.Column="0" Height="20"
                                 Value="{Binding OverallProgress}"
                                 Maximum="100"
                                 Margin="0,0,10,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Column="2"
                               Text="{Binding OverallProgressText}"
                               FontSize="12" VerticalAlignment="Center"/>
                </Grid>
                <TextBlock Text="{Binding ElapsedTimeText}" FontSize="11"
                           Foreground="#7F8C8D" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Phase Details -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Phases}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"
                                Margin="0,0,0,10"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Phase Header -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Phase Number Icon -->
                                    <Border Grid.Column="0"
                                            Width="30" Height="30"
                                            CornerRadius="15"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#BDC3C7"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding StatusColor}" Value="#27AE60">
                                                        <Setter Property="Background" Value="#27AE60"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding StatusColor}" Value="#3498DB">
                                                        <Setter Property="Background" Value="#3498DB"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding StatusColor}" Value="#E74C3C">
                                                        <Setter Property="Background" Value="#E74C3C"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding PhaseNumber}"
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Phase Name and Status -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding PhaseName}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding StatusText}"
                                                   FontSize="11"
                                                   Foreground="{Binding StatusColor}"/>
                                    </StackPanel>

                                    <!-- Progress Percentage -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding ProgressText}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{Binding StatusColor}"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Progress Bar -->
                                <ProgressBar Grid.Row="1"
                                             Height="8"
                                             Value="{Binding Progress}"
                                             Maximum="100"
                                             Margin="0,10,0,10"
                                             Foreground="{Binding StatusColor}"/>

                                <!-- Phase Details -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding ProcessedText}"
                                               FontSize="11"
                                               Foreground="#7F8C8D"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding StartedAtText}"
                                               FontSize="11"
                                               Foreground="#7F8C8D"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding CompletedAtText}"
                                               FontSize="11"
                                               Foreground="#7F8C8D"
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <!-- Error Message (if any) -->
                                <Border Grid.Row="3"
                                        Background="#FADBD8"
                                        Padding="10"
                                        Margin="0,10,0,0"
                                        Visibility="{Binding ErrorVisibility}">
                                    <TextBlock Text="{Binding ErrorMessage}"
                                               Foreground="#C0392B"
                                               TextWrapping="Wrap"
                                               FontSize="11"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
