<UserControl x:Class="Alfresco.App.UserControls.LiveLogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <!-- Style za log level badges -->
        <Style x:Key="LogLevelBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>

        <!-- Style za filter buttons -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style za log items -->
        <Style x:Key="LogItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="📝 Live Log Viewer" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                    <TextBlock Name="TxtStatus" Text="Monitoring active..." FontSize="12" Foreground="#666" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Auto-scroll:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#666"/>
                    <CheckBox Name="ChkAutoScroll" IsChecked="True" VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <Button Name="BtnClear" Content="🗑️ Clear" Padding="10,6" Margin="5,0" Click="BtnClear_Click"/>
                    <Button Name="BtnExport" Content="💾 Export" Padding="10,6" Margin="5,0" Click="BtnExport_Click"/>
                    <Button Name="BtnPause" Content="⏸️ Pause" Padding="10,6" Margin="5,0" Click="BtnPause_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Log Level Filters -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Filter by Level:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>

                    <Button Name="BtnFilterAll" Content="ALL" Style="{StaticResource FilterButtonStyle}"
                            Click="BtnFilterAll_Click" IsEnabled="False"/>
                    <Button Name="BtnFilterDebug" Content="🔍 DEBUG" Style="{StaticResource FilterButtonStyle}"
                            Click="BtnFilterDebug_Click" Foreground="#9E9E9E"/>
                    <Button Name="BtnFilterInfo" Content="ℹ️ INFO" Style="{StaticResource FilterButtonStyle}"
                            Click="BtnFilterInfo_Click" Foreground="#2196F3"/>
                    <Button Name="BtnFilterWarn" Content="⚠️ WARN" Style="{StaticResource FilterButtonStyle}"
                            Click="BtnFilterWarn_Click" Foreground="#FF9800"/>
                    <Button Name="BtnFilterError" Content="❌ ERROR" Style="{StaticResource FilterButtonStyle}"
                            Click="BtnFilterError_Click" Foreground="#F44336"/>
                </StackPanel>

                <!-- Search Box -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="🔍 Search:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Name="TxtSearch" Width="250" Padding="8,4"
                             TextChanged="TxtSearch_TextChanged"
                             ToolTip="Search in log messages"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log List -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" Margin="15">
            <ListBox Name="LogListBox"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ItemContainerStyle="{StaticResource LogItemStyle}"
                     Background="#FAFAFA"
                     SelectionMode="Extended">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Timestamp -->
                            <TextBlock Grid.Column="0"
                                       Text="{Binding Timestamp, StringFormat='HH:mm:ss.fff'}"
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       Foreground="#666"
                                       VerticalAlignment="Top"
                                       Margin="0,0,12,0"
                                       MinWidth="90"/>

                            <!-- Level Badge -->
                            <Border Grid.Column="1"
                                    Background="{Binding LevelColor}"
                                    Style="{StaticResource LogLevelBadgeStyle}">
                                <TextBlock Text="{Binding Level}"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           TextAlignment="Center"/>
                            </Border>

                            <!-- Logger Name -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding LoggerName}"
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       Foreground="#757575"
                                       VerticalAlignment="Top"
                                       Margin="0,0,12,0"
                                       MaxWidth="200"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding LoggerName}"/>

                            <!-- Message -->
                            <TextBlock Grid.Column="3"
                                       Text="{Binding Message}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       Foreground="#333"
                                       VerticalAlignment="Top"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Footer Stats -->
        <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Stats -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📊 Statistics:" FontWeight="SemiBold" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Name="TxtTotalLogs" Text="Total: 0" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Name="TxtDebugCount" Text="🔍 DEBUG: 0" Foreground="#9E9E9E" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Name="TxtInfoCount" Text="ℹ️ INFO: 0" Foreground="#2196F3" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Name="TxtWarnCount" Text="⚠️ WARN: 0" Foreground="#FF9800" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Name="TxtErrorCount" Text="❌ ERROR: 0" Foreground="#F44336" Margin="0,0,15,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Buffer Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Name="TxtBufferInfo" Text="Buffer: 0 / 1000" Foreground="#666" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
